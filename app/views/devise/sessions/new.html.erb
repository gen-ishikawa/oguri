<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
    
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :email, autofocus: true, class: "form-control", placeholder: "ログインID" %>
        <br>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>
      
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :内容を記憶させる %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-warning btn-block" %>
      </div>
    <% end %>
  </div>
</div>
